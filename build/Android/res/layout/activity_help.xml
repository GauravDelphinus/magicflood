<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/bg_sky_blue"
android:padding="@dimen/store_padding"
android:orientation="vertical" >

       <ViewFlipper
            android:id="@+id/view_flipper_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dip" >
            
        <!--  The child Views/Layout to flip -->
        
        <!--  1st Screen -->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/help_screen1_title"
                        android:textColor="@color/help_title_text_color"
                        android:textSize="@dimen/help_title_text_size"
                        android:textStyle="bold" >
                    </TextView>

                     <View
                            android:layout_height="@dimen/big_gap"
                            android:layout_width="wrap_content"
                            />
                     
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/help_image_1"
                        />
                   
                    <View
                            android:layout_height="@dimen/big_gap"
                            android:layout_width="wrap_content"
                            />
                    
                   <TextView 
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/help_screen1_description_text"
                       android:textSize="@dimen/help_description_text_size"
                       android:textColor="@color/help_description_text_color"
                       android:gravity="center"
                       />
                               
            </LinearLayout>

            
             
                    

                 <!--  2nd Screen -->
            
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/help_screen2_title"
                        android:textColor="@color/help_title_text_color"
                        android:textSize="@dimen/help_title_text_size"
                        android:textStyle="bold" >
                    </TextView>

                     <View
                            android:layout_height="@dimen/big_gap"
                            android:layout_width="wrap_content"
                            />
                     
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/help_image_2"
                        />
                   
                    <View
                            android:layout_height="@dimen/big_gap"
                            android:layout_width="wrap_content"
                            />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/help_image_2b"
                        />
                    <View
                            android:layout_height="@dimen/big_gap"
                            android:layout_width="wrap_content"
                            />
                    
                   <TextView 
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/help_screen2_description_text"
                       android:textSize="@dimen/help_description_text_size"
                       android:textColor="@color/help_description_text_color"
                       android:gravity="center"
                       />
                 
                    
            </LinearLayout>
            
			<!--  3rd Screen -->
            
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/help_screen3_title"
                        android:textColor="@color/help_title_text_color"
                        android:textSize="@dimen/help_title_text_size"
                        android:textStyle="bold" >
                    </TextView>

                     <View
                            android:layout_height="@dimen/big_gap"
                            android:layout_width="wrap_content"
                            />
                     
                     <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/help_image_3"
                        />
                   
                    <View
                            android:layout_height="@dimen/big_gap"
                            android:layout_width="wrap_content"
                            />
                   
                   <TextView 
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/help_screen3_description_text"
                       android:textSize="@dimen/help_description_text_size"
                       android:textColor="@color/help_description_text_color"
                       android:gravity="center"
                       /> 
                 
                    
            </LinearLayout>

            
             
        </ViewFlipper>
         <View
                            android:layout_height="@dimen/store_padding"
                            android:layout_width="wrap_content"
                            />
        

        <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/red"
             >
        <LinearLayout
            android:id="@+id/indicator_row_layout_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@color/green"
            >
            
           <!-- Fill programatically -->
                            
        </LinearLayout>
        </RelativeLayout>
</LinearLayout>
