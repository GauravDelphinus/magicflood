<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@color/gray"
android:padding="@dimen/store_padding"
android:orientation="vertical" >

       <ViewFlipper
            android:id="@+id/view_flipper_id"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_margin="6dip" >
            
        <!--  The child Views/Layout to flip -->
        
        <!-- Screens go here dynamically -->

            
             
        </ViewFlipper>
         <View
                            android:layout_height="@dimen/store_padding"
                            android:layout_width="wrap_content"
                            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/store_padding"
            android:layout_marginBottom="@dimen/store_padding"
            >
            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/viewflipper_child1_indicator_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_viewflipper_indicator_selected"
                />
                       <View
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="1dip"
                />
               <ImageView
                android:id="@+id/viewflipper_child2_indicator_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_viewflipper_indicator_unselected"
                />
                          <View
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="1dip"
                />
                  <ImageView
                android:id="@+id/viewflipper_child3_indicator_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_viewflipper_indicator_unselected"
                />
                             <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                />
        </LinearLayout>

</LinearLayout>
