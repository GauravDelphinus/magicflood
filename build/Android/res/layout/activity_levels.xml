<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/bg_sky_blue"
android:padding="@dimen/store_padding"
android:orientation="vertical" >

    <TextView
                        android:id="@+id/levels_title_text_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/level_screen_title"
                        android:textColor="@color/store_iap_text_color"
                        android:textSize="@dimen/levels_title_text_size"
                        android:gravity="center"
                        android:textStyle="bold" >
                    </TextView>

                     <View
                            android:layout_height="@dimen/store_padding"
                            android:layout_width="wrap_content"
                            />
       <ViewFlipper
            android:id="@+id/view_flipper_id"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_margin="6dip" >
            
        <!--  The child Views/Layout to flip -->
        
        <!-- Screens go here dynamically -->

            
             
        </ViewFlipper>
         <View
                            android:layout_height="@dimen/store_padding"
                            android:layout_width="wrap_content"
                            />
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >
        <LinearLayout
            android:id="@+id/indicator_row_layout_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            
           <!-- Fill programatically -->
                            
        </LinearLayout>
        </RelativeLayout>

</LinearLayout>
