<com.ezeeideas.magicflood.AddLifelineProductLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_iap_not_provisioned" 
    android:layout_margin="@dimen/activity_vertical_padding"
    android:padding="@dimen/activity_horizontal_padding"
    android:layout_centerHorizontal="true"
    >
    
    
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/add_lifeline_product_image_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            

                <TextView
                    android:id="@+id/add_lifeline_product_count_text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/store_iap_text_color"
                    android:textSize="@dimen/dialog_continue_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/add_lifeline_product_image_id"
                    />
                
  
    </RelativeLayout>
</com.ezeeideas.magicflood.AddLifelineProductLayout>