<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@color/gray"
android:orientation="vertical" >

       <ViewFlipper
            android:id="@+id/view_flipper_id"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_margin="6dip" >
            
        <!--  The child Views/Layout to flip -->
        
        <!--  Layout 1 for 1st Screen -->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="A-La-Carte Items"
                        android:textColor="#191975"
                        android:textSize="25dp"
                        android:textStyle="bold" >
                    </TextView>

                     <View
                            android:layout_height="@dimen/activity_horizontal_padding"
                            android:layout_width="wrap_content"
                            />
                     
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        
                        <include layout="@layout/layout_store_product" android:id="@+id/alacarte_layout_1_id"
                                />
                           
                        
                        <View
                            android:layout_width="@dimen/activity_horizontal_padding"
                            android:layout_height="wrap_content"
                            />
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/alacarte_layout_2_id"/>
                        
                        <View
                            android:layout_width="@dimen/activity_horizontal_padding"
                            android:layout_height="wrap_content"
                            />
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/alacarte_layout_3_id"/>
                        
                        
                    </LinearLayout>
                    
                     <View
                            android:layout_height="@dimen/activity_horizontal_padding"
                            android:layout_width="wrap_content"
                            />
                     
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/alacarte_layout_4_id"/>
                        
                        <View
                            android:layout_width="@dimen/activity_horizontal_padding"
                            android:layout_height="wrap_content"
                            />
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/alacarte_layout_5_id"/>
                        
                        <View
                            android:layout_width="@dimen/activity_horizontal_padding"
                            android:layout_height="wrap_content"
                            />
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/alacarte_layout_6_id"/>
                        
                        
                    </LinearLayout>
                    
                               <View
                            android:layout_height="@dimen/activity_horizontal_padding"
                            android:layout_width="wrap_content"
                            />
                               
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/alacarte_layout_7_id"/>
                        
                        <View
                            android:layout_width="@dimen/activity_horizontal_padding"
                            android:layout_height="wrap_content"
                            />
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/alacarte_layout_8_id"/>
                        
                        <View
                            android:layout_width="@dimen/activity_horizontal_padding"
                            android:layout_height="wrap_content"
                            />
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/alacarte_layout_9_id"/>
                        
                        
                    </LinearLayout>
                 
                    
            </LinearLayout>

            
             <!--  Layout 2 for 2nd Screen -->
            
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Combo Deals"
                        android:textColor="#191975"
                        android:textSize="25dp"
                        android:textStyle="bold" >
                    </TextView>

                     <View
                            android:layout_height="@dimen/activity_horizontal_padding"
                            android:layout_width="wrap_content"
                            />
                     
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        
                        <include layout="@layout/layout_store_product" android:id="@+id/combo_layout_1_id"
                                />
                           
                        
                        <View
                            android:layout_width="@dimen/activity_horizontal_padding"
                            android:layout_height="wrap_content"
                            />
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/combo_layout_2_id"/>
                        
                       
                        
                    </LinearLayout>
                    
                     <View
                            android:layout_height="@dimen/activity_horizontal_padding"
                            android:layout_width="wrap_content"
                            />
                     
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/combo_layout_3_id"/>
                        
                        <View
                            android:layout_width="@dimen/activity_horizontal_padding"
                            android:layout_height="wrap_content"
                            />
                        
                            <include layout="@layout/layout_store_product" android:id="@+id/combo_layout_4_id"/>
                        
                        
                        
                    </LinearLayout>
                    
                   
                 
                    
            </LinearLayout>


               <!--  Layout 3 for 3rd Screen -->
            
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Other Items"
                        android:textColor="#191975"
                        android:textSize="25dp"
                        android:textStyle="bold" >
                    </TextView>

                     <View
                            android:layout_height="@dimen/activity_horizontal_padding"
                            android:layout_width="wrap_content"
                            />
                     
                  <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        
                        <include layout="@layout/layout_store_product" android:id="@+id/remove_ads_layout_id"
                                />
                           
                      
                        
                    </LinearLayout>
                    
                     
                    
            </LinearLayout>

        </ViewFlipper>
         <View
                            android:layout_height="@dimen/activity_horizontal_padding"
                            android:layout_width="wrap_content"
                            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            >
            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/viewflipper_child1_indicator_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_viewflipper_indicator_selected"
                />
                       <View
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="1dip"
                />
               <ImageView
                android:id="@+id/viewflipper_child2_indicator_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_viewflipper_indicator_unselected"
                />
                          <View
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="1dip"
                />
                  <ImageView
                android:id="@+id/viewflipper_child3_indicator_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_viewflipper_indicator_unselected"
                />
                             <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                />
        </LinearLayout>

</LinearLayout>
