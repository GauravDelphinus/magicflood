<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ezeeideas.magicflood.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/eazy_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="@string/easy_button_label_name" />

    <Button
        android:id="@+id/medium_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eazy_game_button"
        android:layout_below="@+id/eazy_game_button"
        android:layout_marginTop="32dp"
        android:text="@string/mediun_button_label_name" />

    <Button
        android:id="@+id/hard_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/medium_game_button"
        android:layout_below="@+id/medium_game_button"
        android:layout_marginTop="32dp"
        android:text="@string/hard_button_label_name" />

    <TextView
        android:id="@+id/game_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eazy_game_button"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="82dp"
        android:text="@string/game_title_label" />
    
     <Button
        android:id="@+id/store_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hard_game_button"
        android:layout_marginTop="32dp"
        android:text="@string/store_button_name" />

</RelativeLayout>