<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/main_background_color"
    tools:context="com.ezeeideas.magicflood.MainActivity" >

	<ImageView
	    android:id="@+id/game_title_id"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/ic_logo_big"
	    android:layout_gravity="center"
	    />
	<TextView
	    android:id="@+id/company_name_id"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="@string/by_company_text"
	    android:textColor="@color/by_company_text_color"
	    />

	<RelativeLayout
	    android:id="@+id/spinner_layout_id"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_marginTop="@dimen/activity_vertical_margin"
	    android:layout_weight="1"
	    >
		<RelativeLayout
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:layout_centerInParent="true"
      	    android:background="@color/white"
      	    android:padding="@dimen/main_screen_buttons_margin"
      	    >
		<ImageView
		    android:id="@+id/star_button_id"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_button_star_normal"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:layout_margin="@dimen/main_screen_buttons_margin"
		    android:padding="0px"
		    />
		<ImageButton
		    android:id="@+id/easy_level_button_id"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_button_level_easy"
		    android:layout_toRightOf="@+id/star_button_id"
		    android:layout_alignParentTop="true"
		    android:layout_margin="@dimen/main_screen_buttons_margin"
		    android:padding="0px"
		    />
		<ImageButton
		    android:id="@+id/medium_level_button_id"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_button_level_medium"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/star_button_id"
		    android:layout_margin="@dimen/main_screen_buttons_margin"
		    android:padding="0px"
		    />
		<ImageButton
		    android:id="@+id/hard_level_button_id"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_button_level_hard"
		    android:layout_toRightOf="@+id/medium_level_button_id"
		    android:layout_below="@+id/easy_level_button_id"
		    android:layout_margin="@dimen/main_screen_buttons_margin"
		    android:padding="0px"
		    />
		</RelativeLayout>
	</RelativeLayout>

    <LinearLayout
        android:id="@+id/button_row_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

     
          <ImageButton
        android:id="@+id/about_button_id"
        android:src="@drawable/ic_button_information"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
          
          <View
              android:layout_width="@dimen/activity_horizontal_margin"
              android:layout_height="1dp"
              />
          
             <ImageButton
        android:id="@+id/help_button_id"
        android:src="@drawable/ic_button_help"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
             
              <View
              android:layout_width="@dimen/activity_horizontal_margin"
              android:layout_height="1dp"
              />
              
               <ImageButton
        android:id="@+id/store_button_id"
        android:src="@drawable/ic_button_store"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
                
	</LinearLayout>
</LinearLayout>