<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_dialog_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/dialog_background"
    android:padding="10dp" >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_try_again_title_text"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:textSize="@dimen/dialog_title_text_size" />
	<ImageButton
	    	    android:id="@+id/cancel_button"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:src="@drawable/ic_button_rate"
	    	    android:layout_alignParentRight="true"
	    	    />
	</RelativeLayout>
        <View
            android:layout_height="10sp"
            android:layout_width="fill_parent"
            />
        
        <TextView
            android:id="@+id/dialog_try_again_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:text="@string/dialog_try_again_description_text"
            android:textSize="@dimen/dialog_description_text_size" />
        
              
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            
        <Button
            android:id="@+id/try_again_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/try_again_button_text"
            android:textSize="@dimen/ui_button_text_size"
            android:textColor="@color/dialog_button_text_color"
            android:background="@color/dialog_menu_button_background_color"
            android:layout_weight="1"
            android:layout_marginRight="10dip"
            />
              
                </LinearLayout>
            
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
        

</LinearLayout>




    