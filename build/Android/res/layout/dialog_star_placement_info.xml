<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_dialog_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/dialog_background"
   >


	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <TextView
	        android:id="@+id/dialog_star_placement_info_title_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/dialog_title_text_size" />
	    	
	</RelativeLayout>
        


        <View
            android:layout_height="10sp"
            android:layout_width="fill_parent"
            />
        
        <TextView
            android:id="@+id/dialog_star_placement_info_description_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:textSize="@dimen/dialog_description_text_size" />
        
              
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
	    	
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_image_screen_7"
            />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
      
        <LinearLayout 
            android:id="@+id/cancel_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_positive_button_dialog"
    android:layout_margin="@dimen/activity_vertical_padding"
    android:padding="@dimen/activity_horizontal_padding"
    >
    <TextView
        android:id="@+id/dialog_introduce_lifeline_positive_button_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/dialog_lifeline_placement_info_button_text"
        android:textSize="@dimen/dialog_positive_button_text_size"
        android:textColor="@color/dialog_button_text_color"
        android:gravity="center"
        />
    </LinearLayout>
        
        </LinearLayout>
        </RelativeLayout>
        
           
       
        

</LinearLayout>




    