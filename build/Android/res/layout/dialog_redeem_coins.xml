<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_dialog_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/dialog_background"
    android:padding="10dp" >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_redeem_coins_title_text"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:textSize="@dimen/dialog_title_text_size" />

        <View
            android:layout_height="10sp"
            android:layout_width="fill_parent"
            />
        
        <TextView
            android:id="@+id/dialog_redeem_coins_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:text="@string/dialog_redeem_coins_description_text"
            android:textSize="@dimen/dialog_description_text_size" />
        
              
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            
        <Button
            android:id="@+id/earn_moves_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/dialog_earn_moves_button_text"
            android:textSize="@dimen/ui_button_text_size"
            android:textColor="@color/dialog_button_text_color"
            android:background="@color/dialog_menu_button_background_color"
            android:layout_weight="1"
            android:layout_marginRight="10dip"
            />
        

         
                <Button
            android:id="@+id/earn_stars_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/dialog_earn_stars_button_text"
            android:textSize="@dimen/ui_button_text_size"
            android:textColor="@color/dialog_button_text_color"
            android:background="@color/dialog_new_game_button_background_color"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            />
              
                </LinearLayout>
            
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="@string/dialog_game_menu_footer_text"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:textSize="@dimen/dialog_continue_text_size" />

</LinearLayout>




    