<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_dialog_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/dialog_background"
    android:padding="10dp" >


	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/dialog_remove_ads_title_text"
            android:textSize="@dimen/dialog_title_text_size" />
	    
	    	<ImageButton
	    	    android:id="@+id/cancel_button"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:src="@drawable/ic_button_rate"
	    	    android:layout_alignParentRight="true"
	    	    />
	</RelativeLayout>
        


        <View
            android:layout_height="10sp"
            android:layout_width="fill_parent"
            />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:text="@string/dialog_remove_ads_description_text"
            android:textSize="@dimen/dialog_description_text_size" />
        
              
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout 
            android:id="@+id/remove_ads_button_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_iap_not_provisioned" 
    android:layout_margin="@dimen/activity_vertical_padding"
    android:padding="@dimen/activity_horizontal_padding"
    android:layout_centerHorizontal="true"
    >
    
    
       
   <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/store_iap_text_color"
                    android:textSize="@dimen/dialog_continue_text_size"
                    android:text="@string/dialog_remove_ads_button_name_text"
                    android:gravity="center"
	                    />
                <TextView
                    android:id="@+id/dialog_remove_ads_button_price_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/store_iap_text_color"
                    android:textSize="@dimen/dialog_continue_text_size"
                    android:gravity="center"
                    />
                
  
</LinearLayout>
            </RelativeLayout>

</LinearLayout>




    