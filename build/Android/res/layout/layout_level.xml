<com.ezeeideas.magicflood.MFLevelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="@drawable/bg_button_general" 
    
    >


	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    >
		    
  		
	    <ImageView
		        android:id="@+id/image_level_status_id"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        />
	
	    
	      
		       
	
	</RelativeLayout>
	    

	   	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    >

		<TextView
		    android:id="@+id/textview_level_name_id"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textColor="@color/store_iap_text_color"
		    android:textSize="@dimen/level_name_text_size"
		    android:layout_centerInParent="true"
		    />
		</RelativeLayout>
		
	   	
		

    
    
</com.ezeeideas.magicflood.MFLevelLayout>