<com.ezeeideas.magicflood.MFInAppProductLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="@drawable/background_iap_not_provisioned" 
    android:padding="@dimen/activity_vertical_padding"
    >


	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    >
		    
  		<LinearLayout
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:padding="@dimen/activity_vertical_padding"
  		    android:layout_centerHorizontal="true"
  		    >
	    <ImageView
	        android:id="@+id/image_iap_pic_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        />
	    </LinearLayout>
	    
	      <ImageView
		        android:id="@+id/image_iap_status_id"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        />
		       
	
	</RelativeLayout>
	    
	   	<View
   	    android:id="@+id/rule1"
   	    android:layout_width="fill_parent"
   	    android:layout_height="1dip"
   	    android:layout_gravity="bottom"
   	    android:background="@color/transparent" />
	   	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_weight="1"
	    >

		<TextView
		    android:id="@+id/textview_iap_detail_id"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textColor="@color/store_iap_text_color"
		    android:textSize="@dimen/store_iap_text_size"
		    />
		</LinearLayout>
		
	   	<View
   	    android:id="@+id/rule2"
   	    android:layout_width="fill_parent"
   	    android:layout_height="1dip"
   	    android:layout_gravity="bottom"
   	    android:background="@color/white" />
	   	
		<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_weight="1"
	    >
		<TextView
		    android:id="@+id/textview_pre_price_id"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/store_iap_text_color"
		    />
		<TextView
		    android:id="@+id/textview_price_id"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textStyle="italic"
		    android:textSize="@dimen/iap_price_text_size"
		    android:textColor="@color/store_iap_text_color"
		    android:layout_weight="1"
		    />
		<TextView
		    android:id="@+id/textview_post_price_id"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/store_iap_text_color"
		    />
		</LinearLayout>
	        

    
    
</com.ezeeideas.magicflood.MFInAppProductLayout>