<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_store_not_connected_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/dialog_background"
    android:padding="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_store_not_connected_title_text"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:textSize="@dimen/dialog_title_text_size" />

        <View
            android:layout_height="10sp"
            android:layout_width="fill_parent"
            />
        
        <TextView
            android:id="@+id/dialog_store_not_connected_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:text="@string/dialog_store_not_connected_description_text"
            android:textSize="@dimen/dialog_description_text_size" />
        


            
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="@string/dialog_store_not_connected_footer_text"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:textSize="@dimen/dialog_continue_text_size" />

</LinearLayout>




    