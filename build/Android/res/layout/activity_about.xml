<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/big_gap"
    android:orientation="vertical"
    android:background="@color/about_screen_background_color"
    tools:context="com.ezeeideas.magicflood.MainActivity" >

	<ImageView
	    android:id="@+id/game_title_id"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/ic_logo_big"
	    android:layout_gravity="center"
	    />
	<TextView
	    android:id="@+id/company_name_id"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/by_company_text"
	    android:textColor="@color/by_company_text_color"
	    android:gravity="center"
	    />   
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/activity_vertical_margin"
	        />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/about_copyright_text"
	        android:gravity="center"
	        android:textSize="@dimen/about_copyright_text_size"
	        android:textColor="@color/about_screen_text_color"
	        />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/about_all_rights_text"
	        android:gravity="center"
	        android:textSize="@dimen/about_all_rights_text_size"
	        android:textColor="@color/about_screen_text_color"
	        />
	    
	     <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/activity_vertical_margin"
	        />
	     
	      <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/about_feedback_text"
	        android:gravity="center"
	        android:textSize="@dimen/about_feedback_text_size"
	        android:textColor="@color/about_screen_text_color"
	        />
	      
	     <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="horizontal"
  	android:gravity="center"
  	android:padding="10dip"
  	>
  	
 	<ImageButton
    	android:id="@+id/facebook_button"
    	android:background="@color/transparent"
    	android:src="@drawable/ic_button_facebook"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="0"
    	/>
 	
 	<View
 	    android:layout_width="@dimen/activity_horizontal_margin"
 	    android:layout_height="wrap_content"
 	    />
    	<ImageButton
    	android:id="@+id/rate_app_button"
    	android:background="@color/transparent"
    	android:src="@drawable/ic_button_rate"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="0"
    	/>
    	
    	<View
 	    android:layout_width="@dimen/activity_horizontal_margin"
 	    android:layout_height="wrap_content"
 	    />
    		<ImageButton
    	android:id="@+id/feedback_button"
    	android:background="@color/transparent"
    	android:src="@drawable/ic_button_feedback"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="0"
    	/>
    	
      </LinearLayout>
</LinearLayout>